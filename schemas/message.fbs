namespace protocol;


union CreateType {
    CreatePlan
}

table Create {
    create_type: CreateType;
}

table CreatePlan {
    name: string;
    plan: string;
}

table ByName {
    name: string;
}

union FilterType {
    ByName,
}

table Filter {
    filter_type: FilterType;
}

table GetPlans {
    name: Filter;
}

table GetPlan {
    id: ulong;
}

union GetType {
    GetPlans,
    GetPlan
}



table Get {
    get_type: GetType;
}



table Plan {
    name: string;
    template: string;
}


table Plans {
    plans: [Plan];
}

table Null {}

table String {
    data: string;
}

table Integer {
    data: ulong;
}

table Float {
    data: float;
}

table List {
    data: [Value];
}

table KeyValue {
    key: Value;
    values: Value;
}

table Document {
    data: [KeyValue];
}


union Value {
    Null,
    String,
    Integer,
    Float,
    List,
    Document
}


table Values {
    values: [Value];
}

union Payload {
    Create,
    Get,
    Values,
}


table Message {
  data: Payload;
}

root_type Message;
